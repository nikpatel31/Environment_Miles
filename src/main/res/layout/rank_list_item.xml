<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorPrimary"
    android:paddingBottom="10dp">

    <android.support.v7.widget.CardView
        android:id="@+id/main_blog_post_rank"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="1dp"
        app:cardCornerRadius="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/blog_user_image_rank"
                android:layout_width="111dp"
                android:layout_height="100dp"
                android:layout_marginStart="2dp"
                android:src="@drawable/defaultprofilepic"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/blog_user_name_rank"
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:layout_marginStart="40dp"
                android:layout_marginTop="16dp"
                android:text="User ID"
                android:textAlignment="viewStart"
                android:textSize="24sp"
                android:textStyle="bold"
                app:layout_constraintStart_toEndOf="@+id/blog_user_image_rank"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/blog_points_rank"
                android:layout_width="wrap_content"
                android:layout_height="41dp"
                android:layout_marginStart="40dp"
                android:layout_marginTop="8dp"
                android:text="Points"
                android:textSize="30sp"
                app:layout_constraintStart_toEndOf="@+id/blog_user_image_rank"
                app:layout_constraintTop_toBottomOf="@+id/blog_user_name_rank" />

            <TextView
                android:id="@+id/blog_rank_rank"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp"
                android:layout_marginEnd="16dp"
                android:text="Rank"
                android:textSize="18sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
        </android.support.constraint.ConstraintLayout>

    </android.support.v7.widget.CardView>


</android.support.constraint.ConstraintLayout>